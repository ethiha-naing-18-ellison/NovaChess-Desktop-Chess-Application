<UserControl x:Class="NovaChess.App.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource DarkBackgroundBrush}">
    
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,40">
            <TextBlock Text="{Binding WelcomeMessage}" 
                       Style="{StaticResource TitleText}"
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Subtitle}" 
                       Foreground="{StaticResource AccentBrush}"
                       FontSize="18" HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Main content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Quick Actions -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="Quick Actions" 
                           Style="{StaticResource SubtitleText}"
                           Margin="0,0,0,20"/>
                
                <Button Content="♔ New Game" Command="{Binding NewGameCommand}"
                        Style="{StaticResource ModernButton}" Height="50" Margin="0,0,0,15"
                        FontSize="16" FontWeight="Bold"/>
                
                <Button Content="♗ Analysis Mode" Command="{Binding AnalysisCommand}"
                        Style="{StaticResource ModernButton}" Height="50" Margin="0,0,0,15"
                        FontSize="16" FontWeight="Bold"/>
                
                <Button Content="📚 PGN Library" 
                        Style="{StaticResource ModernButton}" Height="50" Margin="0,0,0,15"
                        FontSize="16" FontWeight="Bold"/>
                
                <Button Content="⚙️ Settings" 
                        Style="{StaticResource ModernButton}" Height="50"
                        FontSize="16" FontWeight="Bold"/>
            </StackPanel>
            
            <!-- Features Overview -->
            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                <TextBlock Text="Features" 
                           Style="{StaticResource SubtitleText}"
                           Margin="0,0,0,20"/>
                
                <StackPanel>
                    <TextBlock Text="♟ Local PvP Games" 
                               Foreground="{StaticResource LightTextBrush}" 
                               FontSize="14" Margin="0,0,0,8"/>
                    <TextBlock Text="♞ Player vs Computer (AI)" 
                               Foreground="{StaticResource LightTextBrush}" 
                               FontSize="14" Margin="0,0,0,8"/>
                    <TextBlock Text="♝ Position Analysis" 
                               Foreground="{StaticResource LightTextBrush}" 
                               FontSize="14" Margin="0,0,0,8"/>
                    <TextBlock Text="♜ Multiple Time Controls" 
                               Foreground="{StaticResource LightTextBrush}" 
                               FontSize="14" Margin="0,0,0,8"/>
                    <TextBlock Text="♛ PGN Import/Export" 
                               Foreground="{StaticResource LightTextBrush}" 
                               FontSize="14" Margin="0,0,0,8"/>
                    <TextBlock Text="♚ Opening Book Support" 
                               Foreground="{StaticResource LightTextBrush}" 
                               FontSize="14" Margin="0,0,0,8"/>
                </StackPanel>
                
                <TextBlock Text="Coming Soon:" 
                           Foreground="{StaticResource AccentBrush}" 
                           FontSize="14" FontWeight="Bold" Margin="0,20,0,10"/>
                
                <StackPanel>
                    <TextBlock Text="• Online multiplayer" 
                               Foreground="{StaticResource LightTextBrush}" 
                               FontSize="12" Margin="0,0,0,5"/>
                    <TextBlock Text="• Advanced analysis tools" 
                               Foreground="{StaticResource LightTextBrush}" 
                               FontSize="12" Margin="0,0,0,5"/>
                    <TextBlock Text="• Tournament mode" 
                               Foreground="{StaticResource LightTextBrush}" 
                               FontSize="12" Margin="0,0,0,5"/>
                    <TextBlock Text="• Custom themes" 
                               Foreground="{StaticResource LightTextBrush}" 
                               FontSize="12" Margin="0,0,0,5"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <!-- Footer -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,40,0,0">
            <TextBlock Text="Ready to play chess? Click 'New Game' to get started!" 
                       Foreground="{StaticResource LightTextBrush}" 
                       FontSize="14" HorizontalAlignment="Center" Opacity="0.8"/>
        </StackPanel>
    </Grid>
</UserControl>
